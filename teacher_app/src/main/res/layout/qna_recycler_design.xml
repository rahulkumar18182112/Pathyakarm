<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="25sp"
        android:outlineAmbientShadowColor="@color/black"
        android:layout_margin="5sp"
        app:cardCornerRadius="25sp"

        tools:targetApi="p">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30sp"
            tools:ignore="TextSizeCheck">

            <TextView
                android:id="@+id/asked_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginStart="10sp"
                android:layout_weight="1"
                android:text="Date" />

            <TextView
                android:id="@+id/asked_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Time"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30sp"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/student_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="class"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/student_class"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textStyle="bold"
                android:textSize="18sp"
                android:id="@+id/student_mail"/>

            <TextView
                android:id="@+id/asked_query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:text="Sir i am rahul and my problem is to find a good
                book for android would you please suggest me some books "
                tools:ignore="VisualLintLongText,TextSizeCheck" />

        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>