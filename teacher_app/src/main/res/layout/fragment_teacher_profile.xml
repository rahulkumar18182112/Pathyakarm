<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Teacher_profile"
    android:orientation="vertical"
    android:gravity="center">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="#F11B1B"
        app:civ_border_width="1sp"
        android:id="@+id/t_profile_pic"
        android:layout_margin="10sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:gravity="center"
        android:layout_marginBottom="10sp"
        android:layout_margin="8sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:gravity="start"
            android:layout_marginEnd="20sp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rahul kumar"
            android:gravity="start"
            android:id="@+id/t_name"
            android:layout_weight="1"
            android:layout_marginLeft="42sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:gravity="center"

        android:layout_margin="8sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/father_s_name"
            android:gravity="start"
            android:layout_marginEnd="20sp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sanjay kumar"
            android:id="@+id/t_father_name"
            android:gravity="start"
            android:layout_weight="1"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:gravity="center"
        android:layout_margin="8sp"
        >

        <TextView
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:layout_weight="1"

            android:text="Subjects :" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hindi,English,maths"
            android:id="@+id/t_subjects"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:gravity="center"
        android:layout_margin="8sp"        >

        <TextView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:layout_weight="1"
            android:text="Blood Group :" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A+"
            android:id="@+id/t_blood_grp"
            android:layout_weight="1"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:gravity="center"
        android:layout_margin="8sp"        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number :"
            android:layout_marginEnd="20sp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7503617457"
            android:id="@+id/t_phone_no"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20sp"
        android:gravity="center"
        android:layout_margin="8sp"
        >

        <TextView
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20sp"
            android:layout_weight="1"
            android:text="Address :" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hanuman Mandir kulehra
             greater Noida 201306"
            android:id="@+id/t_address"
            android:layout_weight="1"/>

    </LinearLayout>







</LinearLayout>