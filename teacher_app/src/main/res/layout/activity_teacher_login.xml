<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Teacher_login_activity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:elevation="25sp"
        app:cardCornerRadius="25sp"
        android:backgroundTint="@android:color/transparent"

        android:outlineSpotShadowColor="@color/black"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Welcome Teacher..."
                android:textColor="#FA1414"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the Email id:"
                android:textStyle="bold"
                android:layout_marginTop="12sp"
                android:textColor="#fff"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/teacher_email"


                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:autofillHints=""
                android:background="#fff"
                android:gravity="center"
                android:hint="Mail id"
                android:inputType="textEmailAddress"
                android:minHeight="48dp"
                android:textColorHint="#757575"
                tools:ignore="VisualLintTextFieldSize" />
            <TextView
                android:layout_marginTop="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter the Password:"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/teacher_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="#fff"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:minHeight="48dp"

                android:textColorHint="#757575"
                tools:ignore="VisualLintTextFieldSize" />

            <Button
                android:id="@+id/teacher_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:backgroundTint="#F45A5A"
                android:text="Proceed to login"
                android:textColor="#212121"
                tools:ignore="VisualLintButtonSize" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>